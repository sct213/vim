" My vim setting.

" 마우스 사용
set mouse=a

" Always show current position
set ruler

" Highlight search results
set hlsearch

" Makes search act like search in modern browsers
set incsearch

" line number
set number

""""""""""""""""""""""""""" Colors and Fonts

" syntax highlight
syntax on

" color scheme
colorscheme desert
set backgroun=dark

" Set utf8 as standard encoding
set encoding=utf8

""""""""""""""""""""""""""" Text, tab indent related
" indent
set autoindent

" auto indent's tab size
set shitfwidth=4

" 1tab == 4spaces
set tapstop=4

" show match
set showmatch

